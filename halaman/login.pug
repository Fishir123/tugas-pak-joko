extends ../component/_template.pug

block head
    link(rel="stylesheet", href="css/login.css")

block content
    .boxlogin
        h1 Login
        .contenerlogin
            - const Input = ['text', 'password']
            - const placeholder = ['Email', 'Password']
                each inputType, index in Input
                    input(type=inputType, class='input', placeholder=placeholder[index]) 
            button(type="submit" class="login") Login
        .signup
            p Don't have an account? 
            a(href="https://fishir123.github.io/tugas-pak-joko/halaman/signup.html") Sign Up

